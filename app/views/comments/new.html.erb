<div class="container-fluid">
  <% if session[:for_article_show].zero? %>
    <div class="row">
      <span class="explain">
        好きなスイーツについて投稿、共有しましょう！
      </span>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-2">
      <% if session[:for_article_show].zero? %>
        <%= render 'shared/category' %>
      <% elsif session[:for_article_show] == 1 %>
        <div class="text-center user_profile">
          <%= render 'shared/article_user_profile' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 offset-md-1">
      <%= render @article %>
      
      <!-- コメントフォームを作成する -->
      <!-- プロフ写真、テキストエリア、コメントボタン -->
      <div class="border border-dark rounded comment-form">
        <div class="row">
          <div class="col-md-3 text-center">
            <div>
              <%= link_to image_tag(current_user.image, alt: 'User_image', class:'user_image'),
                  current_user %>
            </div>
          </div>
          <div class="col-md-9 no_padding">
            <%= form_for [@article, @comment] do |f| %>
              <div class="display-flex">
                <div class="form-group comment-area">
                  <%= f.text_area :content, rows: 4, class:"form-control", id: "comment_area", placeholder: 'コメントを入力' %>
                </div>
                <script>
                  document.getElementById('comment_area').focus()
                </script>
                <div class="form-group comment-button">
                  <%= f.submit '送信', class:"btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>