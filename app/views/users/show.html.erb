<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h2 class="text-center"><%= @title %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 text-center user_profile">
      <div class="fixed-sidebar">
        <%= render 'shared/user_profile' %>
      </div>
    </div>
    <div class="col-md-6 offset-md-1">
      <div class="articles">
        <ul>
          <%= render @articles %>
        </ul>
      </div>
      <div class="pagination">
        <%= paginate @articles %>
      </div>
    </div>
  </div>
</div>