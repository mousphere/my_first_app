<div class="container-fluid">
  <div class="row">
    <div class="d-none d-lg-block col">
      <h2 class="text-center">作成記事</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 text-center user_profile">
      <div class="fixed-user-function">
        <%= render 'shared/article_user_profile' %>
      </div>
    </div>
    <div class="col-12 d-lg-none">
      <h2 class="text-center">作成記事</h2>
    </div>
    <div class="col-lg-6">
      <div class="articles">
        <ul>
          <%= render @article %>
        </ul>
      </div>
      <h5 style="padding-top: 10px;">コメント一覧</h5>
      <div class="comments">
        <ul>
          <%= render @comments %>
        </ul>
        <div class="pagination">
          <%= paginate @comments %>
        </div>
      </div>
    </div>
  </div>
</div>