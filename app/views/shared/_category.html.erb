<div class="sidebar">
  <span class="category">検索フォーム</span>
  <div class="reference">
    <%= search_form_for @q, url: "/", html: { method: :get }, class:'search_form' do |f| %>
      <%= f.select :genre_eq, genre_list, include_blank: 'ジャンルを選択', id:'genre-selection' %>
      <%= f.select :prefecture_eq, prefecture_array, include_blank: '都道府県を選択', id:'prefecture-selection' %>
      <%= f.search_field :sweet_name_cont, id:'sweet-name-search', placeholder:'商品名検索' %>
      <div class="clear-button">
        <%= link_to 'クリア', root_path, class:'btn btn-secondary' %>
      </div>
      <div class="search-button">
        <%= button_tag type: 'submit', id:'search-button' do %>
          <%= icon('fas', 'search') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>